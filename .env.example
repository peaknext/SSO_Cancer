# SSO Cancer Care â€” Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values

# Database (external PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/sso_cancer?schema=public

# JWT Secrets (generate random 256-bit hex strings)
JWT_SECRET=change-me-to-a-random-256-bit-hex-string
JWT_REFRESH_SECRET=change-me-to-a-different-random-256-bit-hex-string

# CORS (frontend origin)
CORS_ORIGIN=http://localhost:47001

# Ports (use high ports to avoid conflict with Docker on 3000/4000)
WEB_PORT=47001
API_PORT=48002

# Application
NODE_ENV=development
LOG_LEVEL=debug
